<resources>

    <!-- Dark -->
    <style name="DarkAppBase" parent="MaterialDrawerTheme">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- <item name="android:statusBarColor">@andrliveColorolor/transparent</item> -->

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_divider">@color/divider</item>

        <!-- Dialog -->
        <item name="android:alertDialogTheme">@style/DarkDialogBase</item>
        <item name="android:dialogTheme">@style/DarkDialogBase</item>
    </style>

    <style name="DarkDialogBase" parent="Theme.AppCompat.Dialog">
        <!-- <item name="android:windowBackgrounliveColorolor/colorWindowBackground</item> -->
        <item name="android:windowNoDisplay">true</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/nerd_accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!-- Dark -->
    <style name="NerdAppBase" parent="MaterialDrawerTheme">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:colorPrimary">@color/nerd_primary</item>
        <item name="android:colorPrimaryDark">@color/nerd_primary_dark</item>
        <item name="android:colorAccent">@color/nerd_accent</item>
        <item name="android:windowBackground">@color/nerd_windowBackground</item>
        <item name="android:textColorPrimary">@color/nerd_primary_text</item>
        <item name="android:textColorSecondary">@color/nerd_secondary_text</item>

        <!-- <item name="android:statusBarColor">@andrliveColorolor/transparent</item> -->

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_divider">@color/nerd_divider</item>
    </style>

    <style name="NerdDialogBase" parent="Theme.AppCompat.Dialog">
        <!-- <item name="android:windowBackgrounliveColorolor/colorWindowBackground</item> -->
        <item name="android:windowNoDisplay">true</item>
        <item name="android:colorPrimary">@color/nerd_primary</item>
        <item name="android:colorPrimaryDark">@color/nerd_primary_dark</item>
        <item name="android:colorAccent">@color/nerd_accent</item>
        <item name="android:windowBackground">@color/nerd_windowBackground</item>
        <item name="android:textColorPrimary">@color/nerd_primary_text</item>
        <item name="android:textColorSecondary">@color/nerd_secondary_text</item>
    </style>

    <style name="MaterialDrawerTheme.NerdAppBase" parent="MaterialDrawerTheme" />

</resources>
