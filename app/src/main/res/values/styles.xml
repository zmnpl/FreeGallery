<resources>

    <!-- Dark -->
    <style name="DarkAppBase" parent="MaterialDrawerTheme">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="material_drawer_divider">@color/divider</item>
        <!-- <item name="android:statusBarColor">@andrliveColorolor/transparent</item> -->

    </style>

    <style name="DarkDialogBase" parent="Theme.AppCompat.Dialog">
        <!-- <item name="android:windowBackgrounliveColorolor/colorWindowBackground</item> -->
        <item name="android:windowNoDisplay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!-- Dark Colors -->

    <!-- Blue Grey -->
    <style name="BlueGrey" parent="DarkAppBase">
        <item name="colorPrimary">@color/colorPrimaryBlueGrey</item>
        <item name="colorPrimaryDark">@color/colorSecondaryBlueGrey</item>
        <item name="colorAccent">@color/colorAccentBlueGrey</item>
    </style>

    <style name="DialogBlueGrey" parent="DarkDialogBase">
        <item name="colorPrimary">@color/colorPrimaryBlueGrey</item>
        <item name="colorPrimaryDark">@color/colorSecondaryBlueGrey</item>
        <item name="colorAccent">@color/colorAccentBlueGrey</item>
    </style>

    <!-- Indigo -->
    <style name="Indigo" parent="DarkAppBase">
        <item name="colorPrimary">@color/colorPrimaryIndigo</item>
        <item name="colorPrimaryDark">@color/colorSecondaryIndigo</item>
        <item name="colorAccent">@color/colorAccentIndigo</item>
    </style>

    <style name="DialogIndigo" parent="DarkDialogBase">
        <item name="colorPrimary">@color/colorPrimaryIndigo</item>
        <item name="colorPrimaryDark">@color/colorSecondaryIndigo</item>
        <item name="colorAccent">@color/colorAccentIndigo</item>
    </style>

    <style name="Purple" parent="DarkAppBase">
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorSecondaryPurple</item>
        <item name="colorAccent">@color/colorAccenttPurple</item>

    </style>

    <style name="DialogPurple" parent="DarkDialogBase">
        <item name="colorPrimary">@color/colorSecondaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPurple</item>
        <item name="colorAccent">@color/colorAccenttPurple</item>
    </style>

    <!-- Teal -->
    <style name="Teal" parent="DarkAppBase">
        <item name="colorPrimary">@color/colorPrimaryTeal</item>
        <item name="colorPrimaryDark">@color/colorSecondaryTeal</item>
        <item name="colorAccent">@color/colorAccentTeal</item>
    </style>

    <style name="DialogTeal" parent="DarkDialogBase">
        <item name="colorPrimary">@color/colorPrimaryTeal</item>
        <item name="colorPrimaryDark">@color/colorSecondaryTeal</item>
        <item name="colorAccent">@color/colorAccentTeal</item>
    </style>

    <style name="DarkIndigo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkIndigo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
